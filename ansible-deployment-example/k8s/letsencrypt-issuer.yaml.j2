{% if cert_manager_email %}
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
    name: letsencrypt-production
spec:
    acme:
        email: "{{ cert_manager_email }}"
        server: https://acme-v02.api.letsencrypt.org/directory
        privateKeySecretRef:
            name: letsencrypt-production-private-key
        solvers:
            - http01:
                ingress:
                    class: nginx
{% endif %}